  "paths": {
    "/categories": {
      "post": {
        "tags": ["Category"],
        "summary": "Create a Category",
        "description": "route to create a new category",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "Object",
                "properties": {
                  "name": {
                    "type": "string"
                  },  
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Category name sample",
                  "description": "Category description sample"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Category already exists"
          }
        } 
      },
      "get": {
        "tags": ["Category"],
        "summary": "List all categories",
        "description": "Route to list all the categories",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}